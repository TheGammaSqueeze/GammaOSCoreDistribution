<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center_horizontal"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:background="@drawable/wfd_bg"
	android:padding="5dip">
	<!-- First Line -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="4"
		android:gravity="center"
		android:orientation="vertical">
		<ImageView
		 	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/wfd_logo"
			android:contentDescription="@null"/>
		<TextView
		    android:id="@+id/wfd_txt_device_name"
		 	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/wfd_device_name_size"
			android:textColor="@color/wfd_device_name_color"
			android:textStyle="italic"
			android:textIsSelectable="false"/>
		<ImageView
		 	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/wfd_line"
			android:contentDescription="@null"/>
		<!-- 暂时不要 -->
		<TextView
		    android:id="@+id/wfd_txt_device_status"
		 	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/wfd_device_status_size"
			android:textColor="@color/wfd_grid_item_state_color"
			android:textStyle="italic"
			android:textIsSelectable="false"
			android:visibility="gone"/>
	</LinearLayout>
	
	<!-- Second Line -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="3"
		android:gravity="center"
		android:orientation="horizontal">
		<LinearLayout
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<RelativeLayout 
		 	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center">
	  		<TextView
				android:id="@+id/wfd_search"
	 			android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/wfd_search"
				android:drawableLeft="@drawable/wfd_search_selector"
				android:drawablePadding="5dip"
				android:textColor="@drawable/wfd_btn_color"
				android:textSize="@dimen/wfd_btn_title_size"
				android:focusable="true"
				android:clickable="true"/>
	  		<TextView
				android:id="@+id/wfd_search_summary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/wfd_searching"
				android:textSize="@dimen/wfd_btn_title_summary_size"
				android:textColor="@color/wfd_search_summary_color"
				android:textIsSelectable="false"
				android:layout_alignRight="@id/wfd_search"
				android:layout_alignBottom="@id/wfd_search"/>
		</RelativeLayout>
		<LinearLayout
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<TextView
			android:id="@+id/wfd_setting"
		 	android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/wfd_setting"
			android:drawableLeft="@drawable/wfd_settting_selector"
			android:drawablePadding="5dip"
			android:textColor="@drawable/wfd_btn_color"
			android:textSize="@dimen/wfd_btn_title_size"
			android:focusable="true"
			android:clickable="true"
			/>
		<LinearLayout
			android:layout_width="0dip"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
	</LinearLayout>
	
	
	<!-- Third Line -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dip"
		android:layout_weight="3"
        android:minHeight="360dip"
        android:gravity="bottom"
		android:orientation="horizontal">
		<!-- Peer Devices -->
	    <LinearLayout
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical"
			android:paddingRight="20dip">
			<TextView
			 	android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/wifi_p2p_peer_devices"
				android:drawableBottom="@drawable/wfd_line_half"
				android:textSize="@dimen/wfd_type_title_size"
				/>
			<HorizontalScrollView   
				android:layout_width="match_parent"   
				android:layout_height="wrap_content">
				<LinearLayout   
					android:layout_width="wrap_content"  
					android:layout_height="wrap_content"  
					android:orientation="horizontal">
					<GridView 
					    android:id="@+id/wfd_grid_device"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:listSelector="@android:color/transparent"
					    android:stretchMode="none"
			        	android:drawSelectorOnTop="false"
				        android:columnWidth="@dimen/wfd_grid_item_width"
				        android:cacheColorHint="#00000000"
				        android:horizontalSpacing="@dimen/wfd_grid_item_spacing"
				        android:scrollbars="none"
					    />
				</LinearLayout>
			</HorizontalScrollView>
		</LinearLayout>
		
		<!-- Peer Groups -->
		<LinearLayout
			android:layout_width="0dip"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:orientation="vertical">
			<TextView
			 	android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/wifi_p2p_remembered_groups"
				android:drawableBottom="@drawable/wfd_line_half"
				android:textSize="@dimen/wfd_type_title_size"
				/>
			<HorizontalScrollView   
				android:layout_width="match_parent"   
				android:layout_height="wrap_content">
				<LinearLayout   
					android:layout_width="wrap_content"  
					android:layout_height="wrap_content"  
					android:orientation="horizontal">
					<GridView 
					    android:id="@+id/wfd_grid_group"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:listSelector="@android:color/transparent"
					    android:stretchMode="none"
			        	android:drawSelectorOnTop="false"
				        android:columnWidth="@dimen/wfd_grid_item_width"
				        android:cacheColorHint="#00000000"
				        android:horizontalSpacing="@dimen/wfd_grid_item_spacing"
				        android:scrollbars="none"
					    />
				</LinearLayout>
			</HorizontalScrollView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
