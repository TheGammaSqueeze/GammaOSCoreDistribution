cc_defaults {
    name: "arm_gralloc_version_defaults",
    shared_libs: [
        "android.hardware.graphics.common@1.2",
    ],
    cflags: [
        "-DGRALLOC_MAPPER_VERSION_MAJOR=4",
        "-DGRALLOC_ALLOCATOR_HIDL_VERSION_MAJOR=4",
        "-DGRALLOC_ALLOCATOR_AIDL_VERSION=0",
    ],
}

cc_library_shared {
    name: "android.hardware.graphics.allocator@4.0-impl-bifrost",
    defaults: [
        "arm_gralloc_api_4x_defaults",
        "libgralloc_allocator_idl_deps",
    ],
    shared_libs: [
        "android.hardware.graphics.allocator@4.0",
        "android.hardware.graphics.mapper@4.0",
    ],
    static_libs: [
        "libgralloc_allocator_idl",
    ],
    srcs: [
        "allocator.cpp",
    ],
}
