<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:title="HDMI Resolutions">

    <Preference
        android:key="hdmi_settings_heading"
        android:title="Changes the HDMI output settings, applies on reboot. Ensure HDMI is connected during reboot to ensure that the proper resolution is selected."
        android:selectable="false" />

    <PreferenceCategory>
        <com.android.tv.settings.RadioPreference
            android:key="default_resolution"
            android:title="Default" />

        <com.android.tv.settings.RadioPreference
            android:key="resolution_1080p60"
            android:title="1920x1080@60hz" />

        <com.android.tv.settings.RadioPreference
            android:key="resolution_720p60"
            android:title="1280x720@60hz" />

        <!-- Additional Modes -->
        <com.android.tv.settings.RadioPreference
            android:key="resolution_1440p60"
            android:title="2560x1440@60hz (EXPERIMENTAL: MAY NOT WORK)" />

        <com.android.tv.settings.RadioPreference
            android:key="resolution_1200_1080p60"
            android:title="1920x1200@60hz (1080P FrameBuffer)" />

        <com.android.tv.settings.RadioPreference
            android:key="resolution_1200_720p60"
            android:title="1920x1200@60hz (720P FrameBuffer)" />

        <com.android.tv.settings.RadioPreference
            android:key="resolution_1024x768p60"
            android:title="1024x768@60hz" />

        <com.android.tv.settings.RadioPreference
            android:key="resolution_800x600p60"
            android:title="800x600@60hz" />

        <com.android.tv.settings.RadioPreference
            android:key="resolution_720x480p60"
            android:title="720x480@60hz" />

        <com.android.tv.settings.RadioPreference
            android:key="resolution_640x480p60"
            android:title="640x480@60hz" />
    </PreferenceCategory>
</PreferenceScreen>
