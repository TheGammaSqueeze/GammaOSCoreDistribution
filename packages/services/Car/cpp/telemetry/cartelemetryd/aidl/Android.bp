    default_applicable_licenses: ["Android-Apache-2.0"],
}

// See https://source.android.com/devices/architecture/aidl/stable-aidl#module-naming-rules
// to learn how to use it.
aidl_interface {
    name: "android.automotive.telemetry.internal",
    owner: "google",
    srcs: [
        "android/automotive/telemetry/internal/*.aidl",
    ],
    vendor_available: false,
    backend: {
        ndk: {
            enabled: true,
        },
        java: {
            sdk_version: "module_current",
            min_sdk_version: "31",
            apex_available: [
                "//apex_available:platform",
                "com.android.car.framework",
            ],
            enabled: true,
        },
    },

    // Run "m android.automotive.telemetry.internal-update-api" to update the
    // "aidl_api/.../current/" dir whenever the aidl files are changed.
    // This field is automatically updated during version freeze.
    versions_with_info: [
        {
            version: "1",
            imports: [],
        },
    ],
}
