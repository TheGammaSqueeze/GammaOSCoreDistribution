package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

android_test_helper_app {
    name: "StatsdFrameworkTestApp",
    srcs: ["app/src/**/app/*.java"],
    manifest: "app/AndroidManifest.xml",
    static_libs: [
        "androidx.test.runner",
        "androidx.test.core",
        "statsdprotolite",
        "truth-prebuilt",
        "framework-statsd.stubs.module_lib",
    ],
    compile_multilib: "both",
    min_sdk_version: "30",
    sdk_version: "module_current",
    privileged: true,
    certificate: "platform",
}

android_test_helper_app {
    name: "StatsdFrameworkTestAppNoPermission",
    srcs: ["app/src/**/appnopermission/*.java"],
    manifest: "app/AndroidManifestNoPermission.xml",
    static_libs: [
        "androidx.test.runner",
        "androidx.test.core",
        "statsdprotolite",
        "truth-prebuilt",
        "framework-statsd.stubs.module_lib",
    ],
    compile_multilib: "both",
    min_sdk_version: "30",
    sdk_version: "module_current",
    privileged: true,
    certificate: "platform",
}

java_test_host {
    name: "FrameworkStatsdHostTest",
    srcs: [ "src/**/*.java" ],
    libs: [
        "tradefed",
        "truth-prebuilt",
    ],
    test_suites: [
        "device-tests",
        "mts-statsd",
    ],
    data: [
        ":StatsdFrameworkTestApp",
        ":StatsdFrameworkTestAppNoPermission",
    ],
}
