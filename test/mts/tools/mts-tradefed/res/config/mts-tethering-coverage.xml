<!-- Test plan for runs of Tethering MTS to calculate unit test coverage.
     Includes unit tests that will only pass on devices using test platform keys. -->
<configuration description="Runs MTS-tethering-coverage from a pre-existing MTS installation">
    <include name="mts" />

    <option name="plan" value="mts-tethering-coverage" />

    <option name="compatibility:include-filter" value="ConnectivityCoverageTests" />
    <option name="compatibility:include-filter" value="NearbyUnitTests" />
    <option name="compatibility:include-filter" value="CtsNearbyFastPairTestCases" />
    <option name="compatibility:include-filter" value="netd_updatable_unit_test" />
    <option name="compatibility:include-filter" value="libnetworkstats_test" />
    <option name="compatibility:include-filter" value="traffic_controller_unit_test" />
    <option name="compatibility:include-filter" value="libclat_test" />

    <!-- Coverage runs are significantly slower than normal runs, and testFuzzing cannot
         complete before the general test timeout (5 minutes) on such configurations. It is
         still run in other non-coverage test suites. -->
    <option name="compatibility:exclude-filter" value="ConnectivityCoverageTests android.net.NetworkStatsHistoryTest#testFuzzing" />
</configuration>
