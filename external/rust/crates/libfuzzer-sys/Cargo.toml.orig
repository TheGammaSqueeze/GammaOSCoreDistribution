[package]
authors = ["The rust-fuzz Project Developers"]
description = "A wrapper around LLVM's libFuzzer runtime."
edition = "2018"
license = "MIT/Apache-2.0/NCSA"
name = "libfuzzer-sys"
readme = "./README.md"
repository = "https://github.com/rust-fuzz/libfuzzer"
version = "0.4.2"

[dependencies]
arbitrary = "1"
once_cell = "1"

[build-dependencies]
cc = "1.0"

[features]
arbitrary-derive = ["arbitrary/derive"]

[workspace]
members = [
  "./example",
  "./example_arbitrary",
  "./example_mutator",
]

[dev-dependencies]
flate2 = "1.0.20"
rand = "0.8.3"
