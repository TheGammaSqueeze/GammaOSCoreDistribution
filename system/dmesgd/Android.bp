package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

cc_defaults {
    name: "dmesgd_defaults",
    cflags: [
        "-Wall",
        "-Wextra",
        "-Werror",
        "-Wno-unused-argument",
        "-Wno-unused-function",
        "-Wno-nullability-completeness",
        "-Os",
    ],
}

cc_binary {
    name: "dmesgd",
    srcs: [
        "dmesgd.cpp",
        "dmesg_parser.cpp",
    ],
    defaults: ["dmesgd_defaults"],
    shared_libs: [
        "libbase",
        "libevent",
        "liblog",
        "libservices",
        "libutils",
    ],
    init_rc: ["dmesgd.rc"],
}

cc_test {
    name: "dmesg_parser_test",
    defaults: ["dmesgd_defaults"],
    require_root: false,
    srcs: [
        "dmesg_parser.cpp",
        "dmesg_parser_test.cpp",
    ],
}
